- body_class 'form'

- content_for(:title) do
  %h1
    Create new
    = item.class.title

- if item.errors.any?
  .flash.validation-errors
    %h3 Can't continue:
    %ul
      - item.errors.each do |field, errs|
        - errs.each do |err|
          %li
            = field
            = err

%form{:action => action, :method => 'post' }
  - item.class.editor_options.fields.each do |field|
    != field.to_html(item.send(field.name))
  %p.submit
    %button{:type => 'submit'}
      %span Save
