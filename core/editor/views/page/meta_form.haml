%section
  - if item.try(:renderable?)
    %dl
      %dt
        URL:
      %dd
        %span.line= item.path
        - unless item.new?
          %br
          %a.ext.button.micro{:href => item.path} Visit
  - if item.class.try(:subtyped?)
    %dl
      %dt
        = item.class.title
        type:
      %dd
        %select{:name => 'editor[subtype]'}
          != select_options(item.class.subtypes, item.subtype)
