- area_class 'full no-sidebar'

- content_for :title do
  %a.button.black{:href => item.path(:edit)}
    Back

- content_for :toolbar do
  %li
    %span You are seeing a preview.
  %li
    %a.ext{:href => item.path} View live

- content_for :tabs do
  %ul
    %li
      %a{:href => item.path(:edit)} Editor
    %li.active
      %a{:href => item.path(:preview)} Preview

- content_for :nav do
  != yield_content_of item.templates_for(:edit), :nav, { :item => item }

%style
  :plain
    iframe { width: 100%; border: 0; height: 98%; }

#iframe_container
%script
  :plain
    window.setTimeout(function () {
    jQuery('#iframe_container').html('<iframe src=\'#{item.path}\'>');
    }, 200);
