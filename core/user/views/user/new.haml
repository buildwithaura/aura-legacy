- action ||= ''
- options  = { :item => item, :action => action }

- content_for :title do
  %h1 Create a new user

- content_for :tabs do
  != yield_content_of :'admin/settings', :tabs

- content_for :nav do
  != yield_content_of :'admin/settings', :nav

- content_for :toolbar do
  != yield_content_of :'base/new', :toolbar, options

- content_for :body do
  != partial item.templates_for('errors'), :errors => item.errors

  .slim.fixed

    %form.ext{:action => action, :method => 'post' }
      != partial item.templates_for(:form), options

      %input{:type => 'hidden', :name => 'next', :value => R(:admin)}

      %p.align-center
        %br
        %button.black{:type => 'submit'}
          %span Save
