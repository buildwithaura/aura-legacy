- content_for :tabs do
  %ul
    %li
      %a{:href => item.path(:edit)} Editor
    %li
      %a{:href => item.path(:preview)} Preview

- content_for(:title) do
  %h1
    Delete
    = item

- content_for :nav do
  != yield_content_of item.templates_for(:edit), :nav, { :item => item }

- content_for :body do
  .slim-fixed
    %form{:action => action, :method => 'post' }
      %p
        Do you want to delete this?
      %p.submit
        %button{:type => 'submit'}
          %span Delete
