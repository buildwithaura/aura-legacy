- content_for :tabs do
  != partial item.templates_for('tabs'), :item => item

- content_for(:title) do
  %h1
    = item
    %em Delete

- content_for :nav do
  != yield_content_of item.templates_for(:edit), :nav, { :item => item, :action => '' }

- content_for :body do
  .dialog
    %form{:action => action, :method => 'post' }
      %p
        Do you want to delete this?
      %p.submit
        %button{:type => 'submit'}
          %span Delete
