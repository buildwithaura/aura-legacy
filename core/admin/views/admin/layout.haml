!!! 5
%html{:class => browser.body_class}
  - unless request.xhr?
    %head
      %meta(charset='UTF-8')
      %title!= title || "Aura"
      - admin_css '/css/admin.css', 4
      %script{:type => 'text/javascript', :src => '/js/jquery-1.4.2.min.js'}
      - admin_js '/js/jquery.livequery.js', 2
      - admin_js '/js/jquery.hashlisten.js', 2
      - admin_js '/js/jquery.wysiwyg.js', 2
      - admin_js '/js/jquery.uiscreen.js', 2
      - admin_js '/js/jquery.quickvalidate.js', 2
      - admin_js '/js/admin.setup.js', 4
      - admin_js '/js/admin.layout.js', 4
      - admin_js '/js/admin.nav.js', 4
      - admin_css.each do |file|
        %link{:rel => 'stylesheet', :media => 'screen', :type => 'text/css', :href => file}

  %body{:class => body_class}

    - unless request.xhr?
      %script{:type => 'text/javascript'}
        :plain
          document.body.className += 'js-on';
          document.body.style.display = 'none';

      %header#top
        %h3
          %a{:href => R(:admin)}
            Aura
          %a.view.ext{:href => '/', :target => 'preview'}
            view site

        - unless current_user.nil?
          %nav#aux
            %h4
              Hello,
              %a{:href => R(:user, :me, :edit)}= current_user.email
            %ul
              %li
                %a{:href => R(:logout)} Logout

    %nav#tabs
      - if has_content?(:tabs)
        != yield_content :tabs

    %header#title
      - if has_content?(:title)
        .title-c
          != yield_content :title

      - if has_content?(:toolbar)
        %nav#toolbar
          %ul
            != yield_content :toolbar

    #area{:class => area_class}
      - if flash_messages? or flash_errors?
        #flash
          %div
            %ul
              - flash_messages.each do |msg|
                %li.success= msg
              - flash_errors.each do |msg|
                %li.error= msg


      #content
        - if has_content?(:body)
          != yield_content :body
        != yield

    %aside#nav
      .nav-c
        != yield_content :nav

    - unless request.xhr?
      - admin_js.each do |file|
        %script{:type => 'text/javascript', :src => file}

